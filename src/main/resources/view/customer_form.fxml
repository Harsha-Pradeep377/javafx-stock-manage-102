<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.stockmanage102.controller.CustomerFormController">
   <children>
      <Label alignment="CENTER" prefHeight="43.0" prefWidth="601.0" style="-fx-background-color: #00b894;" text="Customer Manage">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="txtId" layoutX="91.0" layoutY="99.0" onAction="#txtIdOnAction" prefHeight="25.0" prefWidth="173.0" promptText="customer id" />
      <TextField fx:id="txtName" layoutX="325.0" layoutY="99.0" prefHeight="25.0" prefWidth="173.0" promptText="customer name" />
      <TextField fx:id="txtAddress" layoutX="91.0" layoutY="188.0" prefHeight="25.0" prefWidth="173.0" promptText="customer address" />
      <TextField fx:id="txtTel" layoutX="325.0" layoutY="188.0" prefHeight="25.0" prefWidth="173.0" promptText="customer tel" />
      <Button layoutX="446.0" layoutY="271.0" mnemonicParsing="false" onAction="#btnSaveOnAction" prefHeight="25.0" prefWidth="55.0" text="Save">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button layoutX="273.0" layoutY="271.0" mnemonicParsing="false" onAction="#btnClearOnAction" prefHeight="25.0" prefWidth="55.0" text="Clear">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button layoutX="357.0" layoutY="271.0" mnemonicParsing="false" onAction="#btnUpdateOnAction" prefHeight="25.0" prefWidth="63.0" text="Update">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
