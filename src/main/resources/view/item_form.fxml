<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="itemNode" prefHeight="517.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.stockmanage102.controller.ItemFormController">
   <children>
      <Label alignment="CENTER" layoutX="-1.0" layoutY="-1.0" prefHeight="49.0" prefWidth="600.0" style="-fx-background-color: #00b894;" text="Item Manage">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="txtItemCode" layoutX="112.0" layoutY="97.0" onAction="#txtItemCodeOnAction" promptText="Item Code" />
      <TextField fx:id="txtDescription" layoutX="332.0" layoutY="97.0" promptText="Description" />
      <TextField fx:id="txtUnitPrice" layoutX="112.0" layoutY="188.0" promptText="Unit Price" />
      <TextField fx:id="txtQty" layoutX="332.0" layoutY="188.0" promptText="Quantity On Hand" />
      <Button layoutX="407.0" layoutY="460.0" mnemonicParsing="false" onAction="#btnSaveOnAction" text="Save">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button layoutX="187.0" layoutY="460.0" mnemonicParsing="false" onAction="#btnClearOnAction" text="Clear">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button layoutX="460.0" layoutY="460.0" mnemonicParsing="false" onAction="#btnDachboardOnAction" text="Back">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button layoutX="246.0" layoutY="460.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" prefHeight="25.0" prefWidth="70.0" text="Delete">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button layoutX="332.0" layoutY="460.0" mnemonicParsing="false" onAction="#btnUpdateOnAction" text="Update">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <TableView fx:id="itemTable" layoutX="50.0" layoutY="232.0" prefHeight="200.0" prefWidth="511.0">
        <columns>
          <TableColumn fx:id="colItemCode" prefWidth="123.0" text="Item Code" />
          <TableColumn fx:id="colDescription" prefWidth="124.0" text="Description" />
            <TableColumn fx:id="colUnitPrice" prefWidth="128.0" text="Unit Price" />
            <TableColumn fx:id="colQtyOnHand" prefWidth="135.0" text="Qty On Hand" />
        </columns>
      </TableView>
   </children>
</AnchorPane>
