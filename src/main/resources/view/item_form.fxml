         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button layoutX="223.0" layoutY="302.0" mnemonicParsing="false" onAction="#btnClearOnAction" text="Clear">
         <font>
            <Font name="System Bold" size="12.0" />
