      <Button layoutX="499.0" layoutY="302.0" mnemonicParsing="false" onAction="#btnDachboardOnAction" text="Back">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button layoutX="287.0" layoutY="302.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" text="Delete">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button layoutX="362.0" layoutY="302.0" mnemonicParsing="false" onAction="#btnUpdateOnAction" text="Update">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
